<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.2.xsd">
    <changeSet id="20210119-MB1" author="Maxim Bezmen">

        <createTable tableName="account" remarks="Accounts of all users">
            <column name="id" type="bigint" autoIncrement="true" remarks="Unique identificator">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_account"/>
            </column>
            <column name="first_name" type="varchar(50)" remarks="First name of user"/>
            <column name="last_name" type="varchar(50)" remarks="Last name of user"/>
            <column name="login" type="varchar(100)" remarks="Login of user"/>
            <column name="email" type="varchar(100)" remarks="Email of user"/>
            <column name="password" type="text" remarks="Password of user"/>
            <column name="enabled" type="boolean" remarks="Enable account"/>
            <column name="modified_date" type="datetime" remarks="date update info" autoIncrement="false"/>
            <column name="created_date" type="datetime" remarks="date create info" autoIncrement="false"/>
        </createTable>

        <createTable tableName="verification_token" remarks="Verification tokens of accounts">
            <column name="id" type="bigint" autoIncrement="true" remarks="Unique identificator">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_verification_token"/>
            </column>
            <column name="expiry_date" type="date" remarks="Date create token"/>
            <column name="token" type="text" remarks="Token of user"/>
            <column name="account_id" type="bigint" remarks="Foreign key to account">
                <constraints foreignKeyName="fk_account_id" references="account(id)"/>
            </column>
            <column name="modified_date" type="datetime" remarks="date update info" autoIncrement="false"/>
            <column name="created_date" type="datetime" remarks="date create info" autoIncrement="false"/>
        </createTable>
        <createTable tableName="ad" remarks="Ads of users">
            <column name="id" type="bigint" autoIncrement="true" remarks="Unique identificator">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_ad"/>
            </column>
            <column name="topic" type="varchar(50)" remarks="Topic of ad"/>
            <column name="date_of_placement" type="date" remarks="Date of placement of ad"/>
            <column name="validity" type="date" remarks="Validity of ad"/>
            <column name="content" type="text" remarks="Content of ad"/>
            <column name="city" type="varchar(50)" remarks="City of ad"/>
            <column name="phone_number" type="varchar(50)" remarks="Phone number of ad"/>
            <column name="account_id" type="bigint" remarks="Foreign key to account">
                <constraints foreignKeyName="fk_account_id" references="account(id)"/>
            </column>
            <column name="modified_date" type="datetime" remarks="date update info" autoIncrement="false"/>
            <column name="created_date" type="datetime" remarks="date create info" autoIncrement="false"/>
        </createTable>

        <createTable tableName="message" remarks="Message of ad">
            <column name="id" type="bigint" autoIncrement="true" remarks="Unique identificator">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_massage"/>
            </column>
            <column name="message" type="varchar(300)" remarks="Message of user"/>
            <column name="ad_id" type="bigint" remarks="Foreign key to ad">
                <constraints foreignKeyName="fk_ad_id" references="ad(id)"/>
            </column>
            <column name="account_id" type="bigint" remarks="Foreign key to account">
                <constraints foreignKeyName="fk_account_id" references="account(id)"/>
            </column>
            <column name="modified_date" type="datetime" remarks="date update info" autoIncrement="false"/>
            <column name="created_date" type="datetime" remarks="date create info" autoIncrement="false"/>
        </createTable>

    </changeSet>
    <changeSet id="2020224-MB1" author="Maxim Bezmen">
        <createTable tableName="role" remarks="Role of user">
            <column name="id" type="bigint"  autoIncrement="true" remarks="Unique identificator">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role"/>
            </column>
            <column name="role_name" type="varchar(20)" remarks="Type of role"/>
            <column name="modified_date" type="datetime" remarks="date update info" autoIncrement="false"/>
            <column name="created_date" type="datetime" remarks="date create info" autoIncrement="false"/>
        </createTable>
        <insert tableName="role">
            <column name="role_name" value="USER"/>
            <column name="created_date" valueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified_date" valueComputed="CURRENT_TIMESTAMP"/>
        </insert>
        <insert tableName="role">
            <column name="role_name" value="ADMIN"/>
            <column name="created_date" valueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified_date" valueComputed="CURRENT_TIMESTAMP"/>
        </insert>
        <addColumn tableName="account">
            <column name="role_id" type="bigint" remarks="Foreign key to role">
                <constraints foreignKeyName="fk_role_id" references="role(id)"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>